<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_root"
                android:elevation="2dp"
                android:background="?android:attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/row_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/row_textview_1"
        android:layout_margin="2dp"
        android:focusable="false"
        android:visibility="visible" >
    </CheckBox>

    <TextView
        android:id="@id/row_textview_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/row_checkbox"
        android:layout_toRightOf="@id/row_checkbox"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/defaultText"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/row_textview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_textview_1"
        android:layout_alignStart="@id/row_textview_1"
        android:layout_alignLeft="@id/row_textview_1"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/defaultText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/row_textview_2"
        android:visibility="visible"
        android:background="#d3d3d3"/>

</RelativeLayout>