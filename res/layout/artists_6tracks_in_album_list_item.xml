<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    
    <CheckBox
        android:id="@+id/TracksByAlbum_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:background="@android:color/transparent" >
    </CheckBox>
    
    <TextView
       android:id="@+id/TracksByAlbum_trackName"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@id/TracksByAlbum_checkBox"
       android:paddingLeft="5dp"
       android:paddingBottom="5dp"
       android:textSize="24sp"
       android:background="@drawable/background_highlighter"
       android:textColor="@drawable/text_highlighter" />
    
    <TextView
       android:id="@+id/TracksByAlbum_trackDuration"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/TracksByAlbum_trackName"
       android:layout_alignLeft="@id/TracksByAlbum_trackName"
       android:paddingLeft="5dp"
       android:paddingBottom="5dp"
       android:textSize="12sp"
       android:background="@drawable/background_highlighter"
       android:textColor="@drawable/text_highlighter" />
     
   	<View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/TracksByAlbum_trackDuration"
        android:visibility="visible"
        android:background="#d3d3d3"/>

</RelativeLayout>